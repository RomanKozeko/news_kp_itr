<%= render "errors", object: @post %>

<%= form_for @post, :html => { :multipart => true } do |f| %>
  <%= f.hidden_field :user_id, value: @post.user_id %>
  <div class = "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= f.label :summary %>
    <%= f.text_field :summary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :preview %>
    <%= f.file_field :preview %>
  </div>

  <div class = "form-group">
    <%= f.label :body %>
    <%= f.trix_editor :body, class: "editor" %>
  </div>

  <div class="form-group">
    <%= f.label :all_tags %>
    <%= f.text_field :all_tags, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, {include_blank: true},  class: "form-control" %>
  </div>

  <div class="form-group">
  <%= submit_tag t(".submit", action: t(submit_name(@post))), class: "btn btn-primary" %>
  </div>
<% end %>