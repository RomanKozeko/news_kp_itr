<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <h5><%= t("common.errors") %></h5>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <div class = "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= f.label :summary %>
    <%= f.text_field :summary, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= f.label :body %>
    <%= f.trix_editor :body, class: "editor" %>
  </div>

  <div class="form-group">
  <%= submit_tag t(".submit", action: t(submit_name(@post))), class: "btn btn-primary" %>
  </div>
<% end %>