<%= render "posts/errors", object: @category %>

<%= form_for @category do |f| %>
  <div class = "form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, category_select(@category), :id, :name, {include_blank: true}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag t(".submit", action: t(submit_name(@category))), class: "btn btn-primary" %>
  </div>
<% end %>