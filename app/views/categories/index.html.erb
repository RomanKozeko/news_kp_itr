<div class="title">
  <h1><%= t('.title') %></h1>
</div>

<section id="categories">
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th><%= t(".name") %></th>
      <th><%= t(".name_parent") %></th>
      <th><%= link_to t(".new"), new_category_path, class: 'btn btn-outline-primary btn-sm' %></th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= category.name %></td>
        <td><%= category.parent.name if category.parent.present? %></td>
        <td>
          <%= link_to  t(".edit"), edit_category_path(category), class: 'btn btn-outline-primary btn-sm'  %>
          <%= link_to  t(".delete"), category_path(category), method: :delete, data: { confirm:  t(".confirm") }, class: 'btn btn-outline-danger btn-sm'  %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>