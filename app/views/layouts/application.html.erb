<!DOCTYPE html>
<html>
  <head>
    <title>Newspaper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to t(".title"), root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to t(".authors"), show_all_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav pull-xs-right">
          <% unless user_signed_in? %>
          <li class="nav-item">
            <%= link_to t(".sign_in"), user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".sign_up"), new_user_registration_path, class: "nav-link" %>
          </li>
            <% else %>
            <li class="nav-item">
              <%= link_to t(".add_news"), new_post_path, class: "btn btn-outline-primary" %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= t(".cabinet") %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to t(".profile"), author_path(current_user.id), class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to t(".sign_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            <li class="nav-item">

            </li>
          <%end %>
        </ul>
        <!--<form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>-->
      </div>
    </nav>
  </div>
<div class="container main">
  <div class="row">
    <div class="col-md-12">
      <% flash.each do |name, massage| %>
      <div class="alert  alert-<%= name %>">
        <%= massage %>
      </div>
      <% end %>
    </div>
  </div>
  <%= yield %>
</div>

  </body>
</html>
